{% extends 'base.html.twig' %}
{% form_theme formView 'bootstrap_4_layout.html.twig' %} {# Utiliser un thème #}

{% block title %}
    Créer un nouveau produit
{% endblock %}

{% block body %}
    <h1>Nouveau produit</h1>

    {# AFFICHAGE DU FORMULAIRE #}
    {{ form_start(formView) }}
    {{ form_errors(formView) }}
    
    <div class="row">
        <div class="col">
            {{ form_row(formView.name) }}
            {{ form_row(formView.price) }}
        </div>
        <div class="col">
            {{ form_row(formView.mainPicture) }}
            {{ form_row(formView.shortDescription) }}
            {{ form_row(formView.category) }}
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary mt-5">
        <i class="fas fa-save">Créer le produit</i>
    </button>

    {{ form_end(formView) }}

{% endblock %}

