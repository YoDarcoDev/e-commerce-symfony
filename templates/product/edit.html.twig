{% extends 'base.html.twig' %}

{% block title %}
    Edition de {{ product.name }}
{% endblock %}

{% block body %}
    <h1>Modifier {{ product.name }}</h1>

    {{ form_start(formView, {'attr': {'novalidate' : 'novalidate'}}) }}
    {{ form_errors(formView) }}

    <div class="row">
        <div class="col">
            {{ form_row(formView.name) }}
            {{ form_row(formView.price) }}
        </div>
        <div class="col">
            {{ form_row(formView.mainPicture) }}
            {{ form_row(formView.shortDescription) }}
            {{ form_row(formView.category) }}
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-5">
        <i class="fas fa-save">Cr√©er le produit</i>
    </button>

    {{ form_end(formView) }}

{% endblock %}