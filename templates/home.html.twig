{% extends "base.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block body %}
    <h1>Nos produits phares</h1>

    <div class="row">
        {% for product in products  %}
            <div class="col">
                <div class="card">
                    <img src="{{ product.mainPicture }}" class="img-fluid" alt="Image du produit">
                    <div class="card-body">
                        <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }}€)</h4>
                        <span class="badge badge-info">{{ product.category.name }}</span>
                        <p class="card-text">{{ product.shortDescription }}</p>
                        <a href="{{ path('product_show', {
                            'category_slug' : product.category.slug,
                            'slug' : product.slug
                        }) }}" class="btn btn-primary btn-sm">Détails</a>
                        <a href="{{ path('product_create') }}" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <hr>

    <h2>Un service irréprochable</h2>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Assumenda consectetur dolorem fugit laboriosam nemo porro.</p>

    <div class="row mb-5">
        {% include "shared/_assurances.html.twig" with {
            "color" : "primary",
            "icone" : "fas fa-truck",
            "text" : "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Assumenda consectetur dolorem fugit laboriosam nemo porro."
        } %}

        {% include "shared/_assurances.html.twig" with {
